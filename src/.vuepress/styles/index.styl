html.light-mode main.page
  --title-color: #44AAAB;
  --text-color: #444444;
  --light-text-color: #666666;
  --link-color: #2aa899;
  --code-color: #745fb5;

  --shadow-color: #eee;
  --border-quote: #333;
  --border: #e7e7e7;
  --shadow: 3px 3px 10px var(--shadow-color);

  --base-font: "Helvetica Neue", "Noto Sans", -apple-system, Ubuntu,
    "Microsoft YaHei", Helvetica, "Nimbus Sans L", Arial, "Liberation Sans",
    "Noto Sans CJK SC", "PingFang SC", "Hiragino Sans GB", "Source Han Sans SC",
    "Source Han Sans CN", "Wenquanyi Micro Hei", "WenQuanYi Zen Hei", "ST Heiti",
    SimHei, "WenQuanYi Zen Hei Sharp", "Source Sans Pro", sans-serif;
  --title-font: "EB Garamond", Georgia, "Noto Serif", "Noto Serif CJK SC",
    "Nimbus Roman No9 L", "Songti SC", "Source Han Serif SC",
    "Source Han Serif CN", STSong, "AR PL New Sung", "AR PL SungtiL GB", NSimSun,
    SimSun, "TW\-Sung", "WenQuanYi Bitmap Song", "AR PL UMing CN",
    "AR PL UMing HK", "AR PL UMing TW", "AR PL UMing TW MBE", PMingLiU, MingLiU,
    "Ubuntu", "Source Sans Pro", serif;
  --monospace: "JetBrains Mono", "Fira Code", "Cascadia Code", "Sarasa Term SC",
    Monaco, "Deja Vu Sans Mono", Consolas, "Lucida Console", "Andale Mono",
    "Roboto Mono", Courier, Monospace !important;
  --header-weight: bold;

  font-size: 14px;
  -webkit-text-size-adjust: 100%;
  -ms-text-size-adjust: 100%;
  text-rendering: optimizelegibility;
  -webkit-font-smoothing: initial;
  color: var(--text-color);
  -webkit-font-smoothing: antialiased;
  line-height: 1.6rem;
  letter-spacing: 0;
  overflow-x: hidden;

  /* Link é“¾æŽ¥ */
  a {
    text-decoration: none;
  }
  .md-content {
    color: var(--light-text-color);
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-weight: var(--header-weight);
    cursor: text;
    color: var(--title-color);
    font-family: var(--title-font);
  }

  h1 {
    font-size: 1.3em;
    margin-bottom: 2rem;
    font-weight: 800;
  }

  h2 {
    font-size: 1.25em;
    border-bottom: 1px solid var(--title-color);
    font-weight: 600;
  }
  h3 {
    font-size: 1.2em;
    font-weight: 600;
  }
  h4 {
    font-size: 1.15em;
  }
  h5 {
    font-size: 1.1em;
  }
  h6 {
    font-size: 1em;
  }

  p,
  blockquote,
  ul,
  ol,
  dl,
  table {
    margin: 0.8em 0;
  }

  /* horizontal rule */
  hr {
    margin: 1.5em auto;
    border-top: 1px solid var(--border);
  }

  /* åˆ—è¡¨ */
  li > ol,
  li > ul {
    margin: 0 0;
  }

  li p.first {
    display: inline-block;
  }

  ul,
  ol {
    padding-left: 2rem;
  }

  ul:first-child,
  ol:first-child {
    margin-top: 0;
  }

  ul:last-child,
  ol:last-child {
    margin-bottom: 0;
  }

  ul li {
    padding-left: 0.1rem;
  }

  /* å¼•ç”¨ */
  blockquote {
    border-left: 0.3rem solid var(--border-quote)!important;
    padding-left: 1em;
    color: var(--light-text-color);
    font-family: var(--base-font);
  }

  /* è¡¨æ ¼ */
  table {
    margin-bottom: 1.25rem;
  }
  table th,
  table td {
    padding: 8px;
    line-height: 1.25rem;
    vertical-align: middle;
    border: 1px solid #ddd;
  }
  table th {
    font-weight: bold;
  }
  table thead th {
    vertical-align: middle;
  }
  table tr:nth-child(2n),
  thead {
    background-color: #fcfcfc;
  }


